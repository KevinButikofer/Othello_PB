<Window x:Class="Othello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="windowGrid">
        <Grid.RowDefinitions>
            <RowDefinition />

            <RowDefinition Height="2*" />
            <RowDefinition Height="2*"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>



        <Viewbox Grid.Column="1" Grid.RowSpan="5
                 ">
            <UniformGrid x:Name="playGrid" Background="#FF009328" />

        </Viewbox>
        <Image Grid.RowSpan="2" Source="Resources\blackCatGirl.png" Grid.Row="1"/>

        <Image Grid.RowSpan="2" Grid.Column="3" Source="Resources\whiteCatGirl.png" Grid.Row="1"/>
        
        <Viewbox >
            <Label HorizontalAlignment="Center" VerticalAlignment="Center">Player 1</Label>
        </Viewbox>
        <Viewbox  Grid.Column="2">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center">Player 2</Label>
        </Viewbox>
        
        <Viewbox  Grid.Row="3">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center">Score</Label>
        </Viewbox>
        <Viewbox  Grid.Column="2" Grid.Row="3">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center">Score</Label>
        </Viewbox>

        <Viewbox  Grid.Row="4">
            
            <Label HorizontalAlignment="Center" VerticalAlignment="Center">Timer</Label>
        </Viewbox>
        <Viewbox  Grid.Column="2" Grid.Row="4">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center">Timer</Label>
        </Viewbox>

        <Viewbox  Grid.Column="1" Grid.Row="5">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center">Player turn</Label>
        </Viewbox>
    </Grid>
</Window>
